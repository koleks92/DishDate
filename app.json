{
    "expo": {
        "name": "DishDate",
        "scheme": "dishdate",
        "slug": "DishDate",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "light",
        "splash": {
            "image": "./assets/splash/splash-icon.png",
            "resizeMode": "contain",
            "backgroundColor": "#f2de77",
            "autoHide": false
        },
        "plugins": [
            "expo-notifications",
            [
                "@react-native-google-signin/google-signin",
                {
                    "iosUrlScheme": "com.googleusercontent.apps.602018707783-iobmkug410uncofs1m5fdpgjvb2f85hg"
                }
            ],
            [
                "expo-splash-screen",
                {
                    "image": "./assets/splash/splash-icon.png",
                    "resizeMode": "contain",
                    "backgroundColor": "#f2de77",
                    "imageWidth": 200
                }
            ],
            "expo-image-picker",
            ["expo-apple-authentication"],
            [
                "expo-font",
                {
                    "fonts": [
                        "./assets/fonts/Tektur-Regular.ttf",
                        "./assets/fonts/Tektur-Bold.ttf"
                    ]
                }
            ]
        ],
        "ios": {
            "associatedDomains": [
                "applinks:dishdate.app",
                "applinks:*.dishdate.app"
            ],
            "supportsTablet": false,
            "bundleIdentifier": "com.koleks92.DishDate",
            "infoPlist": {
                "NSPhotoLibraryUsageDescription": "The app accesses your photos to let you select photos.",
                "NSCameraUsageDescription": "The app accesses your camera to let you take photos.",
                "ITSAppUsesNonExemptEncryption": false
            },
            "usesAppleSignIn": true,
            "icon": {
                "dark": "./assets/icons/Dark.png",
                "light": "./assets/icons/Light.png",
                "tinted": "./assets/icons/Tinted.png"
            }
        },
        "android": {
            "intentFilters": [
                {
                    "action": "VIEW",
                    "data": {
                        "scheme": "https",
                        "host": "dishdate.app",
                        "pathPrefix": "/join-game"
                    },
                    "autoVerify": true,
                    "category": ["BROWSABLE", "DEFAULT"]
                }
            ],
            "googleServicesFile": "./services/google-services.json",
            "adaptiveIcon": {
                "foregroundImage": "./assets/icons/adaptive-icon.png",
                "monochromeImage": "./assets/icons/adaptive-icon.png",
                "backgroundColor": "#f2de77"
            },
            "package": "com.koleks92.DishDate",
            "permissions": ["android.permission.RECORD_AUDIO"]
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "extra": {
            "eas": {
                "projectId": "48da0c2c-3538-4f0e-848b-2b9f73087662"
            }
        }
    }
}
